<?xml version="1.0" encoding="UTF-8"?>
<assembly 
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd"
  	>
    <id>resources</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
    	<fileSet>
    		<directory>${basedir}/src/main/app-resources</directory>
            <outputDirectory></outputDirectory>
            	<includes>
    				<include>/views/*.jsp</include>
    				<include>webresources/css/*.css</include>
    				<include>webresources/js/*.js</include>
    				<include>webresources/images/*.png</include>
    				<include>webresources/images/*.jpg</include>
    				<include>webresources/images/*.gif</include>
    			</includes>
    	</fileSet>
    </fileSets>    
</assembly>